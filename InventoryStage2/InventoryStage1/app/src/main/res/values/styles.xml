<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/buttonColor</item>
        <item name="android:layout_marginEnd">@dimen/margin8</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation</item>
    </style>

    <style name="DetailButtonsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/buttonColor</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation</item>
    </style>

    <style name="ColumnNameDetailTextStyle">
        <item name="android:layout_width">@dimen/margin0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/detailTextColor</item>
    </style>

    <style name="ColumnValueDetailTextStyle">
        <item name="android:layout_width">@dimen/margin0</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/detailTextColor</item>
    </style>

    <style name="DetailsViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
